FROM ruipires99/raspcrosscompile:0.0.3

ARG projectDir

RUN rm -rf /home/$projectDir

RUN mkdir -p /home/$projectDir

COPY $projectDir /home/$projectDir

RUN cd /home/$projectDir && \
    /build/qt6/pi/bin/qt-cmake . \
    -DCMAKE_BUILD_TYPE=Debug \
    -DZENOHCXX_ZENOHC=ON && \
    cmake --build .

CMD ["/bin/bash"]